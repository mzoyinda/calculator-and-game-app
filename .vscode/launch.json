    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "image mover",
            "protocol": "inspector",
            "sourceMaps": true,
            "preLaunchTask": "tsc: build - tsconfig.json",
            "program": "${workspaceRoot}/app.ts",
            "outFiles": ["${workspaceRoot}/out/*.js"]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Launch",
            "address": "localhost",
            "outFiles": []
        }
    ]
}